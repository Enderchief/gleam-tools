{
  "name": "vite-gleam",
  "version": "1.0.0",
  "description": "Import directly from *.gleam files",
  "scripts": {
    "build:pkg": "pnpm -r --filter='./packages/vite-gleam' run build",
    "build": "pnpm build:pkg",
    "format": "prettier -w packages/*/src",
    "dev": "pnpm -r --filter='./packages/*' run dev",
    "prepublish": "pnpm build",
    "publish": "pnpm publish --filter='./packages/vite-gleam' --dry-run"
  },
  "keywords": [
    "gleam",
    "vite",
    "vite-plugin"
  ],
  "author": "Enderchief",
  "license": "MIT"
}
