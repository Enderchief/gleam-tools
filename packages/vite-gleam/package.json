{
  "name": "vite-gleam",
  "version": "0.4.2",
  "description": "Import directly from *.gleam files using Vite",
  "repository": {
    "url": "https://github.com/Enderchief/gleam-tools/tree/master/packages/vite-gleam"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch src",
    "format": "prettier -w src"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    }
  },
  "keywords": [
    "gleam",
    "vite",
    "vite-plugin"
  ],
  "files": [
    "dist"
  ],
  "author": "Enderchief",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.30",
    "prettier": "^3.0.2",
    "tsup": "^7.2.0"
  },
  "dependencies": {
    "magic-string": "^0.30.2",
    "rollup": "^3.28.0",
    "toml": "^3.0.0",
    "vite": "^4.4.5"
  }
}
